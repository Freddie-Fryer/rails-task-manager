<h1>
  <% if @task.completed %>
    <i class="fa fa-check-square-o"></i> - 
  <% else %>
    <i class="fa fa-square-o"></i> - 
  <% end %>
  <%= @task.title %> - 
  <%= @task.details %>
</h1>

<%= link_to 'back', tasks_path %>
<%= link_to 'edit', edit_task_path %>
<%= link_to 'delete', task_path(@task), method: :delete, data: { confirm: "Are you sure?" } %>
